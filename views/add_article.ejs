  <h1 class="text-center">Ayo buat artikel mu</h1>
  <form action="/articles/add" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>

    <div class="form-group">
